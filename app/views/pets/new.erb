<h1>Create a new Pet</h1>

<form action="/pets" method="post">
  <label for="">Pet Name:</label>
  <input type="text" name="pet[name]" id="pet_name">
  <label for="owner[pet_ids][]">Choose an Owner:</label>
  <%@owners.each do |owner|%>
    <input type="checkbox" name="owner[owner_id][]" id="<%=owner.id%>" value="<%=owner.id%>"><%=owner.name%></input>
  <%end%>

  <br>
  <label>Or Add a New Owner:</label>
  <br>
  <label>Name:</label>
  <input  type="text" name="owner[name]" id="owner_name"></input>

  <br>
  <input type="submit" id="Create Pet">
</form>
